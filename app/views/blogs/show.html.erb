<br>
<br>
<h1><%= @blogs.title %></h1>


<p><%= @blogs.body %></p>
<small>
<p>Posted <%= time_ago_in_words(@blogs.created_at) %> ago</p>
</small> 
<% if can?(:crud,@blog)%>
<%= link_to "Delete", blog_path(@blogs), method: :delete, data: {confirm: "Are you sure?"}%>
|
<%= link_to "Edit", edit_blog_path(@blogs)%>
<%end%>

<h2>Comment:</h2>

<%= form_with(model: [@blogs, @comment], local: true) do |f| %>

    <%= f.text_area(
        :body,
        cols: 50,
        rows: 5,
        placeholder: "what's your comment?"
    )%>
    <br>
    <%= f.submit "Comment" %>
<% end %>
<br>
<h2>Comments</h2>
<% @comments.each do |a| %>

    <li>
    <%= a.body%>
    <br>
    <small>
     Commented <%=time_ago_in_words(a.created_at)%> ago
     </small>
        <% if can?(:crud,a)%>
        <%= link_to(
            "Delete", 
           blog_comment_path(@blogs, a),
            method: :delete,
            data: {
            confirm: "are you sure you want to delete this answer?"
        }
       
    )%>
     <% end %>
    <br>
    </li>


<% end %>
